{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,        
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
